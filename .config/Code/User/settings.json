{
	/**
	 *** VIM RELATED SETTINGS
	 **/

	"vim.easymotion": true,
	"vim.sneak": true,
	"vim.vimrc.enable": true,
	"vim.vimrc.path": "~/.vimrc",
	"keyboard.dispatch": "keyCode",
	"vim.leader": " ",
	"vim.useSystemClipboard": false,
	// vim key bindings
	"vim.normalModeKeyBindingsNonRecursive": [
		{
			"before": ["<leader>", "w"],
			"commands": ["workbench.action.navigateEditorGroups"]
		},
		{
			"before": ["<leader>", "e"],
			"commands": ["workbench.action.toggleSidebarVisibility"]
		},
		{
			"before": ["<leader>", "\\"],
			"commands": ["revealInExplorer"]
		},
		{
			"before": ["<leader>", "l"],
			"commands": ["editor.action.formatDocument"]
		},
		{
			"before": ["<leader>", "r"],
			"commands": ["workbench.action.files.revealActiveFileInWindows"]
		},
		{
			"before": ["<leader>", "<HOME>"],
			"after": ["_"]
		},
		{
			"before": ["<leader>", "g"],
			"commands": ["editor.action.goToTypeDefinition"]
		},
		// close without saving
		{
			"before": ["Z", "X"],
			"commands": ["workbench.action.closeActiveEditor"]
		}
	],
	"vim.handleKeys": {
		"<C-w>": true,
		"<C-e>": true,
		"<C-d>": true,
		"<C-x>": true,
		"<C-a>": true,
		"<C-f>": true,
		"<C-c>": false,
		"<C-n>": false,
		"<C-j>": false
	},

	/**
	 *** BATCHES ON SAVE
	 **/

	"runOnSave.commands": [
		{
			"match": ".*",
			"command": "extension.vim_escape",
			"runIn": "vscode"
		}
	],

	/**
	 *** TEXT FORMATING SETTINGS
	 **/

	"editor.formatOnSave": true,
	"editor.formatOnPaste": true,
	"prettier.useTabs": true,

	// Default text formating preferences
	"[python]": {
		"editor.defaultFormatter": "ms-python.python"
	},
	"[jsonc]": {
		"editor.defaultFormatter": "esbenp.prettier-vscode"
	},
	"[html]": {
		"editor.defaultFormatter": "esbenp.prettier-vscode"
	},
	"[typescript]": {
		"editor.defaultFormatter": "vscode.typescript-language-features"
	},
	"[javascript]": {
		"editor.defaultFormatter": "esbenp.prettier-vscode"
	},
	"[json]": {
		"editor.defaultFormatter": "esbenp.prettier-vscode"
	},

	/**
	 *** EDITOR SETTINGS
	 **/

	"editor.cursorSurroundingLines": 10,
	"editor.bracketPairColorization.enabled": true,
	"editor.guides.bracketPairs": "active",
	"editor.lineNumbers": "relative",
	"security.workspace.trust.untrustedFiles": "open",
	"gitlens.defaultDateFormat": null,
	"typescript.updateImportsOnFileMove.enabled": "always",
	"editor.cursorBlinking": "phase",
	"editor.cursorSmoothCaretAnimation": true,
	"editor.renderWhitespace": "none",
	"liveSassCompile.settings.formats": [
		{
			"format": "expanded",
			"extensionName": ".css",
			"savePath": "/css"
		}
	],
	"python.defaultInterpreterPath": "/bin/python",
	"window.autoDetectColorScheme": true,
	"workbench.preferredDarkColorTheme": "Catppuccin Macchiato",
	"workbench.preferredLightColorTheme": "Catppuccin Latte",
	"workbench.colorTheme": "Catppuccin Macchiato",
	"editor.fontSize": 15,
	"editor.suggestSelection": "first",
	"vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue",
	"peacock.affectStatusBar": true,
	"peacock.affectTitleBar": true,
	"git.autofetch": true,
	"emmet.includeLanguages": {
		"javascript": "javascriptreact"
	},
	"editor.inlineSuggest.enabled": true,
	"github.copilot.enable": {
		"*": true,
		"yaml": false,
		"plaintext": true,
		"markdown": false,
		"javascript": true,
		"python": true,
		"sql": true,
		"json": false
	},
	"git.confirmSync": false,
	"zenMode.hideLineNumbers": false,
	"zenMode.hideStatusBar": false,
	"zenMode.centerLayout": false,
	"editor.rulers": [80, 160],
	"git.ignoreRebaseWarning": true,
	"vim.cursorStylePerMode.visual": "block",
	"vim.cursorStylePerMode.replace": "underline",
	"editor.minimap.enabled": false,
	"window.menuBarVisibility": "compact",
	"workbench.iconTheme": "material-icon-theme",
	"files.defaultLanguage": "${activeEditorLanguage}",
	"extensions.ignoreRecommendations": true,
	"window.zoomLevel": 1,
	"remoteHub.uncommittedChangesOnEntry": "none",
	"explorer.fileNesting.enabled": true,
	"explorer.fileNesting.patterns": {
		"*.ts": "${capture}.js, ${capture}.typegen.ts",
		"*.js": "${capture}.js.map, ${capture}.min.js, ${capture}.d.ts",
		"*.jsx": "${capture}.js",
		"*.tsx": "${capture}.ts, ${capture}.typegen.ts",
		"tsconfig.json": "tsconfig.*.json",
		"package.json": "package-lock.json, yarn.lock, pnpm-lock.yaml",
		"*.mts": "${capture}.typegen.ts",
		"*.cts": "${capture}.typegen.ts"
	}
}
