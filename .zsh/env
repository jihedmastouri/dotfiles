goingDark () {
	gsettings set org.gnome.desktop.interface color-scheme prefer-dark
}

letThereBeLight () {
	gsettings set org.gnome.desktop.interface color-scheme prefer-light
}

startMongo () {
    sudo systemctl start mongod
    sudo systemctl enable mongod
}

changeBg () {
	declare -A themes=(['prefer-light']=light ['prefer-dark']=dark)
	theme="$( gsettings get org.gnome.desktop.interface color-scheme )"
	echo ${themes["$theme"]}
	echo $theme
	pic_dir="~/Pictures/wallpaper_${themes[$theme]}"
	pic=$( fd . pic_dir | fzf )
	gsettings get org.gnome.desktop.background picture-uri pic
}

bla () {
	echo "hi"
}

weather () {
	curl -s 'wttr.in/Tunis?format="%l:+%c+%t+%h+%w+%p+%P+%u"' ; date +"%a %Y-%m-%d %H:%M %:z"
}

