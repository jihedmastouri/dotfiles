alias vim="nvim" 
alias please="sudo -i"
alias ss="source %"
alias cclip="xclip -selection clipboard"
alias pclip="xclip -o -selection clipboard"

# Better LS
alias train=sl sl=exa 
alias l="exa -l --all"         
alias ll="exa -l"

# Python
alias venv="source venv/bin/activate"
alias nvenv="python -m venv venv"

# Dotfiles with Git
alias config='/usr/bin/git --git-dir=$HOME/dotfiles/ --work-tree=$HOME'

# Personal Bash Scripts
alias fvim="BashScripts/fuzzy-vim"
