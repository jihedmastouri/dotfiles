alias please="sudo -i"
alias sr="source %"
alias cclip="wl-copy"
alias pclip="wl-paste"
alias weather="curl 'wttr.in/Tunis?2QF'"
alias _size="du -H --max-depth=1"

# VIM
alias vi="/bin/vim"
alias vim="nvim"

# Better LS
alias ls="exa --icons"
alias train=\\sl sl="\\exa --icons"
alias la="exa --all --icons"
alias l="exa -l --icons"
alias ll="exa -l --all --icons"
alias tree="exa --all --git-ignore --tree --level=3 --icons"

# Python
alias venv="source venv/bin/activate"
alias nvenv="python -m venv venv"
alias ipy="ipython --colors=Linux --no-confirm-exit --pylab=agg"

# Dotfiles with Git
alias config='/usr/bin/git --git-dir=$HOME/dotfiles/ --work-tree=$HOME'
