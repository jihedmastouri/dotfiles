alias please="sudo -i"
alias sr="source %"
alias ccp="wl-copy"
alias vcp="wl-paste"
alias weather="curl 'wttr.in/Tunis?2QF'"
alias _size="du -H --max-depth=1"

# VIM
alias vi="/bin/vim"
alias vim="nvim"
alias v="nvim"

# Better LS
alias ls="exa --icons"
alias train=\\sl sl="\\exa --icons"
alias la="exa --all --icons"
alias l="exa -l --icons"
alias ll="exa -l --all --icons"
alias lt="exa --all --git-ignore --tree --level=3 --icons"

# Python
alias venv="source venv/bin/activate"
alias nvenv="python -m venv venv"
alias ipy="ipython --colors=Linux --no-confirm-exit --pylab=agg"

# Dotfiles with Git
alias config='/usr/bin/git --git-dir=$HOME/dotfiles/ --work-tree=$HOME'

# Flatpaks
alias ems="flatpak run im.riot.Riot --enable-features=UseOzonePlatform,WebRTCPipeWireCapturer --ozone-platform=wayland"
alias code="flatpak run com.visualstudio.code"
alias sdroid="/opt/android-studio/bin/studio.sh"
