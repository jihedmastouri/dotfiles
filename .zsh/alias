alias please="sudo -i"
alias sr="source %"
alias cclip="xclip -selection clipboard"
alias pclip="xclip -o -selection clipboard"
alias _myip="ip address | grep -o \"inet 192.*/\" | awk '{ print \$2 }' | tr / ' ' | xargs"
alias myip="curl -s 'https://ipinfo.io' | jq -r '.[]' | head --lines=7"
alias weather="curl 'wttr.in/Tunis?2QF'"

# VIM
alias vi="/bin/vim"
alias vim="nvim --listen /tmp/neomj"
alias v="nvim --server /tmp/neomj --remote 2> /dev/null"

# Better LS
alias ls=exa
alias train=\\sl sl=\\exa
alias l="exa -l --all"
alias ll="exa -l"

# Python
alias venv="source venv/bin/activate"
alias nvenv="python -m venv venv"
alias ipy="ipython --colors=Linux --no-confirm-exit --pylab=agg"

# Dotfiles with Git
alias config='/usr/bin/git --git-dir=$HOME/dotfiles/ --work-tree=$HOME'

# Personal Bash Scripts
alias fvim="~/BashScripts/fuzzy-vim"
alias fcd="~/BashScripts/fuzzy-cd"
alias fsr="~/BashScripts/fuzzy-search"
alias myconda="source ~/BashScripts/anaconda"
alias fmux="~/BashScripts/fuzzy-tmux-sessions"
alias focus="~/BashScripts/tmux-sessions"
